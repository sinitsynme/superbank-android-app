<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AccountInfoActivity">

    <LinearLayout
        android:id="@+id/lin_lay_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_account" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/label_customer_info"
            android:textSize="30sp" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/lin_lay_header"
        android:background="@color/bank_green" />

    <LinearLayout
        android:id="@+id/lin_lay_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/l_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-black"
            android:labelFor="@+id/et_first_name"
            android:paddingTop="15dp"
            android:text="@string/label_first_name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="textEnd"
            android:textSize="22sp"
            android:maxLength="40"
            tools:ignore="SpeakableTextPresentCheck"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_lay_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_lay_first_name"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/l_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-black"
            android:labelFor="@+id/et_last_name"
            android:paddingTop="15dp"
            android:text="@string/label_last_name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="textEnd"
            android:textSize="22sp"
            android:maxLength="40"
            tools:ignore="SpeakableTextPresentCheck"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_lay_patronymic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_lay_last_name"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/l_patronymic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:width="150dp"
            android:fontFamily="sans-serif-black"
            android:labelFor="@+id/et_last_name"
            android:paddingTop="15dp"
            android:text="@string/label_patronymic"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_patronymic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:importantForAutofill="no"
            android:maxLength="40"
            android:textAlignment="textEnd"
            android:textSize="22sp"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_lay_birth_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_lay_patronymic"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/l_birth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:width="120dp"
            android:fontFamily="sans-serif-black"
            android:labelFor="@+id/et_last_name"
            android:paddingTop="15dp"
            android:text="@string/label_birth_date"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="textEnd"
            android:textSize="22sp"
            android:maxLength="40"
            tools:ignore="SpeakableTextPresentCheck"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_lay_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_lay_birth_date"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/l_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:width="120dp"
            android:fontFamily="sans-serif-black"
            android:labelFor="@+id/et_last_name"
            android:paddingTop="15dp"
            android:text="@string/label_country"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:importantForAutofill="no"
            android:maxLength="40"
            android:textAlignment="textEnd"
            android:textSize="22sp"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_lay_town"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_lay_country"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/l_town"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:width="120dp"
            android:fontFamily="sans-serif-black"
            android:labelFor="@+id/et_last_name"
            android:paddingTop="15dp"
            android:text="@string/label_town"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_town"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="textEnd"
            android:textSize="22sp"
            android:maxLength="40"
            tools:ignore="SpeakableTextPresentCheck"/>

    </LinearLayout>

    <View
        android:id="@+id/bottom_divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/lin_lay_town"
        android:layout_marginTop="10dp"
        android:background="@color/bank_green"
        />

    <Button
        android:id="@+id/b_back_to_main_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom_divider1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/berrish_red"
        android:padding="15dp"
        android:text="@string/button_to_main_page"
        android:textColor="@color/white" />


    <View
        android:id="@+id/bottom_divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/b_back_to_main_page"
        android:layout_marginTop="10dp"
        android:background="@color/bank_green"
        />


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom_divider2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_name"
        android:padding="5dp"
        app:srcCompat="@drawable/logo" />


</RelativeLayout>