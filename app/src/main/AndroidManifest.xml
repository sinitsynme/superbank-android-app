<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.superbank">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SuperBankApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_banc_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_banc_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuperBankApplication">
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.RegistrationActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AccountInfoActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.NewTransactionActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.NewAccountActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>